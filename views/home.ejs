						<div class="movie-list">
							<% for(var i=0; i<moviesList.length; i++){ %>
              
              <% 
              var isLike = false;
              for(var y=0; y<moviesLike.length; y++){ 
                if(moviesList[i].id == moviesLike[y].id) {
                  isLike = true;
                }
              }
              %>
              <div class="movie">
								<figure class="movie-poster"><img src="https://image.tmdb.org/t/p/w185/<%=moviesList[i].poster_path%>" alt="#"></figure>
								<div class="movie-title"><a href="./single?id=<%=moviesList[i].id%>"><%=moviesList[i].original_title%></a> 
                <%
                if(isLike) {
                %>
                  <i class="fa fa-heart" aria-hidden="true"></i>
                <%
                } else {
                %>
                <a href="./like?id=<%=moviesList[i].id%>"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
                <%
                }
                %>
                </div>
             
								<p><%=moviesList[i].overview%></p>
                
              </div>
              
						<% } %>
						</div> <!-- .movie-list -->

